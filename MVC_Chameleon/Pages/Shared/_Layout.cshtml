<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC_Chameleon</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.style.css" asp-append-version="true" />
</head>
<body>
    <header>
<nav class="navbar navbar-expand-sm navbar-light bg-success-subtle border-success-subtle border-bottom box-shadow mb-3">
    <div class="container d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center">
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                <img src="~/images/logo.png" alt="Logo" style="width: 40px; height: 40px;" />
                <span class="text-success-emphasis ms-2">Chameleon</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark-emphasis" asp-area="" asp-page="/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark-emphasis" asp-area="" asp-page="/Privacy">Privacy</a>
                </li>
            </ul>
        </div>
        <div class="troca-tema d-flex align-items-center flex-shrink-0">
            <label class="theme-switch">
                <input type="checkbox" id="theme-toggle">
                <span class="slider"></span>
            </label>
        </div>
    </div>
</nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MVC_Chameleon - <a asp-area="" asp-page="/Privacy">Privacy</a> - Desenvolvido com  <a href="https://learn.microsoft.com/aspnet/core">ASP.NET Core MVC</a>.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>  
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/layout.script.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>